@article{ ISI:000487705200001,
Author = {Vu, Tuan V. and Lavrentyev, A. A. and Gabrelian, V, B. and Kalmykova, K.
   F. and Vo, Dat D. and Tong, Hien D. and Hoat, D. M. and Batouche, M. and
   Luong, Hai L. and Khyzhun, O. Y.},
Title = {{Effect of DFT methods on electronic structure and K-absorption spectra
   of InPS4: detailed studies of the optical, thermoelectric and elastic
   properties}},
Journal = {{MATERIALS RESEARCH EXPRESS}},
Year = {{2019}},
Volume = {{6}},
Number = {{10}},
Month = {{OCT}},
Abstract = {{The effect of exchange-correlation potential on InPS4 electronic
   structure was studied by applying GGA, GGA + U, mBJ, and mBJ +
   Upotentials in the Kohn-Sham framework. The use of mBJ + U in full
   potential APW + lo method results in reliable K-absorption spectrum,
   which consists of nearly full experimental peaks of right intensity. The
   remarkable discrepancy between epsilon(perpendicular to)(1)(omega) and
   epsilon(parallel to)(1)(omega) occurs at 0 eV, 4 eV, 6 eV, and 9.5 eV,
   indicating the strong anisotropic optical properties of InPS4 at these
   energy levels. At 4 eV, epsilon(parallel to)(1)(omega) is 37\% higher
   than epsilon(perpendicular to)(2)(omega). The optical absorption of
   InPS4 has high order of 10(5) cm(-1) magnitude for wide energy range, at
   least within 4-20 eV. The difference in extinction coefficient
   k(perpendicular to)(omega) and k(parallel to)(omega) is 30\%-50\% at 4
   eV, 6 eV, 8 eV, and 11 eV. The figure of merit ZT of InPS4 is rather
   low. At n = 8 x 10(18) cm(-3), ZT achieves its highest value of about
